@inject CULCS.DAL.CuContext _context
@model CULCS.DTO.LoginDTO
@{
    ViewData["Title"] = "Sign in";
    Layout = "_LayoutLogin";
    var setup = _context.Setups.FirstOrDefault();


}
<div class="container-fluid">
    <!-- Log In page -->
    <div class="row vh-100">
        <div class="col-lg-9 p-0 h-100vh d-flex justify-content-center auth-bg">
            <div class="accountbg d-flex align-items-center">
                <div class="account-title text-center text-white">
                    <img src="~/images/logo.png" alt="" height="300" style="background:#fff">
                    <div class="border w-25 mx-auto border-warning"></div>
                    <p class="font-14 mt-3">
                        @Html.Raw(setup.FirstPageDesc)
                    </p>
                    <div class="border w-25 mx-auto border-warning"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 pr-0">
            <div class="auth-page">
                <div class="card mb-0 shadow-none h-100">
                    <div class="card-body">
                        <div class="px-3">
                            <div class="mb-5">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <a href="#" class="logo logo-admin">
                                            <span><img src="~/images/logo.png" height="80" alt="logo" class="my-3"></span>
                                        </a>
                                    </div>
                                    <div class="col-sm-6 text-right">
                                        
                                    </div>
                                </div>
                            </div>
                            <h2 class="font-weight-semibold font-22 mb-2">Welcome to License Portal System</h2>
                            <ul class="nav-border nav nav-pills" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active font-weight-semibold" data-toggle="tab" href="#LogIn_Tab" role="tab">Sign in</a>
                                </li>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">
                                    <form class="form-horizontal auth-form my-4 form-parsley" novalidate role="form" asp-action="Login" asp-controller="Auth">
                                        @Html.HiddenFor(m => m.LanguageCode)
                                        <div class="form-group">
                                            <label for="username">Email</label>
                                            <input type="text" class="form-control" asp-for="UserName" required>
                                            @Html.ValidationMessageFor(m => m.UserName)

                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label for="userpassword">Password</label>
                                            <input type="password" class="form-control" asp-for="Password" required>
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </div><!--end form-group-->

                                        <div class="form-group mb-0 row">
                                            <div class="col-12 mt-2">
                                                <button class="btn btn-gradient-primary btn-block waves-effect waves-light" type="submit"><i class="fas fa-sign-in-alt ml-1"></i> Sign in</button>
                                            </div><!--end col-->
                                        </div> <!--end form-group-->
                                       
                                    </form><!--end form-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
