@model CULCS.Models.Setup

@{
    ViewData["Title"] = "กำหนดค่าระบบ";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div aria-live="polite" aria-atomic="true" style="position: relative;">
                <div class="page-title-box">
                    <div class="float-right">
                    </div>
                    <h4 class="page-title">กำหนดค่าระบบ</h4>
                    <p class="text-muted">
                        System Configuration
                    </p>
                </div><!--end page-title-box-->
                @if (ViewBag.ReturnCode != null)
                {
                    <div style="position: absolute; top: 25px; right: 0;">
                        <div class="toast fade show" role="alert" aria-live="assertive" aria-atomic="true" data-toggle="toast">
                            <div class="toast-header">
                                <i class="mdi mdi-circle-slice-8 font-18 mr-1 @(ViewBag.ReturnCode  == ReturnCode.Success ? "text-success" : "text-danger")"></i>
                                <strong class="mr-auto">@ViewBag.Message</strong>
                                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div> <!--end toast-->
                    </div>
                }
            </div>
        </div><!--end col-->
    </div>
    <!--end row-->
    <form class="form-horizontal form-parsley" novalidate role="form" asp-action="Setup" asp-controller="System">
        @Html.HiddenFor(m=>m.ID)
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body mt-3">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-right">สิทธิ์ในการยืม</label>
                                    <div class="col-sm-8 mt-2">
                                        <div class="checkbox checkbox-primary">
                                            <input id="PaymentFilter" type="checkbox" asp-for="PaymentFilter" value="true">
                                            <label for="PaymentFilter">
                                                เฉพาะนักศึกษาที่ทำการชำระค่าเล่าเรียนเท่านั้น
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-right">Admin Azure Group Name</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" asp-for="AdminAzureGroupName">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-right">ข้อความหน้าแรก</label>
                                    <div class="col-sm-8">
                                        @*<textarea class="form-control" type="text" asp-for="FirstPageDesc" rows="10"></textarea>*@
                                        <textarea id="elm1"  asp-for="FirstPageDesc" ></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-8">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-right"></label>
                                    <div class="col-sm-8">
                                        <button class="btn btn-primary" type="submit">บันทึก</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div> <!-- end card-body -->
                    </div> <!-- end card -->
            </div> <!-- end col -->
            <!-- end col -->
        </div>
    </form>


    <!-- end row -->

</div><!-- container -->
